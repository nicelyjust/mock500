<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableLoadMore="false"
    app:srlEnableOverScrollBounce="true"
    app:srlEnableRefresh="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.yunzhou.tdinformation.mine.widget.SettingItem
            android:id="@+id/si_setting_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_89"
            app:settingTextColor="@color/colorText3"
            app:settingTextSize="16sp"
            app:settingTxt="账号和安全"
            app:showTextColor="@color/colorTextC"
            app:showTextSize="14sp"/>
        <com.yunzhou.tdinformation.mine.widget.SettingItem
            android:id="@+id/si_setting_notice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_89"
            app:settingTextColor="@color/colorText3"
            app:settingTextSize="16sp"
            app:settingTxt="推送消息设置"
            app:showTextColor="@color/colorTextC"
            app:showTextSize="14sp"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="@dimen/qb_px_80"
            android:id="@+id/btn_logout"
            android:text="@string/login_out"
            style="@style/confirm_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>