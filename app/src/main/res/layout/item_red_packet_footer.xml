<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_70">
    <TextView
        android:textColor="@color/colorText6"
        android:textSize="@dimen/qb_px_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/v_center"
        android:text="没有更多红包了"/>
    <View
        android:id="@+id/v_center"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/qb_px_32"
        android:layout_width="@dimen/qb_px_1"
        android:layout_height="@dimen/qb_px_25"
        android:layout_centerVertical="true"
        android:background="@color/colorText9"/>
    <TextView
        android:background="@drawable/ic_material_ripple"
        android:id="@+id/tv_check_useless_red"
        android:textColor="#237EDB"
        android:textSize="@dimen/qb_px_22"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/v_center"
        android:text="查看无效红包 》"/>
</RelativeLayout>