<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/qb_px_32">
    <ImageView
        android:id="@+id/iv_lottery"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_50"
        android:layout_marginStart="@dimen/qb_px_32"
        android:contentDescription="@null"
        android:src="@mipmap/default_lottery"/>
    <TextView
        android:id="@+id/tv_week_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/qb_px_55"
        android:layout_marginTop="@dimen/qb_px_12"
        android:textColor="@color/colorText9"
        android:textSize="@dimen/qb_px_22"
        tools:text="周三"/>
    <TextView
        android:id="@+id/tv_time_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_week_lottery"
        android:layout_alignBottom="@id/tv_week_lottery"
        android:layout_marginEnd="@dimen/qb_px_19"
        android:layout_toStartOf="@id/tv_week_lottery"
        android:textColor="@color/colorText9"
        android:textSize="@dimen/qb_px_22"
        tools:text="09-21  09:56"/>
    <TextView
        android:id="@+id/tv_no_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_time_lottery"
        android:layout_alignBottom="@id/tv_time_lottery"
        android:layout_marginEnd="@dimen/qb_px_19"
        android:layout_toStartOf="@id/tv_time_lottery"
        android:textColor="@color/colorText9"
        android:textSize="@dimen/qb_px_22"
        tools:text="第2018098期"/>
    <TextView
        android:id="@+id/tv_lottery_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_no_lottery"
        android:layout_alignBottom="@id/iv_lottery"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_toEndOf="@id/iv_lottery"
        android:textColor="@color/colorText3"
        android:textSize="@dimen/qb_px_32"
        tools:text="双色球"/>

    <LinearLayout
        android:id="@+id/ll_ball_container_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_lottery"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_marginTop="@dimen/qb_px_19"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_marginTop="@dimen/qb_px_30"
        android:id="@+id/ll_func_container_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_ball_container_lottery"
        android:layout_marginStart="@dimen/qb_px_32"
        android:orientation="horizontal"/>
    <View
        style="@style/horizontal_line"
        android:layout_below="@id/ll_func_container_lottery"
        android:layout_marginTop="@dimen/qb_px_19"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/qb_px_32"
        android:contentDescription="@null"
        android:src="@mipmap/spinner_back"/>
</RelativeLayout>