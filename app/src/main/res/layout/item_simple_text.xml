<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/v_block_gray"
        style="@style/horizontal_block"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_89"
        android:background="@drawable/ic_material">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/qb_px_32"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_32"
            tools:text="意见反馈：用的不爽，我有话说"/>
        <ImageButton
            android:id="@+id/ib_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/qb_px_32"
            android:background="@null"
            android:src="@mipmap/spinner_back"/>
        <TextView
            android:textColor="@color/colorTextC"
            android:textSize="@dimen/qb_px_28"
            android:visibility="gone"
            android:id="@+id/tv_desc_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/qb_px_26"
            android:layout_toStartOf="@id/ib_arrow"
            android:text="@string/contact_num"/>
    </RelativeLayout>

    <View
        style="@style/horizontal_line"/>
</LinearLayout>