<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_89"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_lottery_detail_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="一等奖"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
        <TextView
            android:id="@+id/tv_lottery_detail_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="6+1"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
        <TextView
            android:id="@+id/tv_lottery_detail_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="中奖注数"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
        <TextView
            android:id="@+id/tv_lottery_detail_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="单注奖金(元)"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
    </LinearLayout>

    <View style="@style/horizontal_line"/>
    <LinearLayout
        android:id="@+id/ll_plus_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_69"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_lottery_detail_plus_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="追加"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
        <TextView
            android:id="@+id/tv_lottery_detail_plus_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同上"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
        <TextView
            android:id="@+id/tv_lottery_detail_plus_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="32"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
        <TextView
            android:id="@+id/tv_lottery_detail_plus_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="1000,000"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/qb_px_26"/>
    </LinearLayout>
    <View
        android:id="@+id/v_plus"
        style="@style/horizontal_line"/>
</LinearLayout>