<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".profile.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_399"
                android:background="@mipmap/expert_head_bg">
                <com.yunzhou.tdinformation.view.widget.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/qb_px_100"
                    android:layout_height="@dimen/qb_px_100"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/qb_px_82"
                    android:src="@mipmap/default_head"/>
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/qb_px_20"
                    android:text="-- --"
                    android:textColor="@color/base_FFFEFE"
                    android:textSize="@dimen/qb_px_30"/>
                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nickname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/qb_px_19"
                    android:text="个人简介："
                    android:textColor="@color/base_FFFEFE"
                    android:textSize="@dimen/qb_px_24"/>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/qb_px_30"
                    android:layout_below="@id/tv_intro"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/qb_px_37"
                    android:background="@color/base_FFFEFE"/>

                <LinearLayout
                    android:id="@+id/ll_follow_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_intro"
                    android:layout_marginEnd="@dimen/qb_px_52"
                    android:layout_toStartOf="@id/v_line"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_follow_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/base_FFFEFE"
                        android:textSize="@dimen/qb_px_25"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:text="@string/ta_follow"
                        android:textColor="@color/base_FFFEFE"
                        android:textSize="@dimen/qb_px_20"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fan_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_intro"
                    android:layout_marginStart="@dimen/qb_px_52"
                    android:layout_toEndOf="@id/v_line"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_fan_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/base_FFFEFE"
                        android:textSize="@dimen/qb_px_25"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:text="@string/ta_fans"
                        android:textColor="@color/base_FFFEFE"
                        android:textSize="@dimen/qb_px_20"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="@dimen/qb_px_120"
                    android:layout_height="@dimen/qb_px_60"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/qb_px_38"
                    android:layout_marginEnd="@dimen/qb_px_33"
                    android:background="@drawable/shape_gray_stroke_mid_radius_bg"
                    android:text="@string/follow_plus"
                    android:textColor="@color/base_FFFEFE"
                    android:textSize="@dimen/qb_px_24"
                    android:visibility="gone"/>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <com.yunzhou.tdinformation.view.widget.CircleImageView
                    android:id="@+id/iv_logo_portrait"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@mipmap/default_head"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_logo_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#FFF"
                    android:visibility="gone"
                    tools:text="thanatosx"
                    tools:visibility="visible"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <ViewStub
            android:id="@+id/vs_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout="@layout/include_empty"/>
        <ViewStub
            android:id="@+id/vs_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout="@layout/include_load"/>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
