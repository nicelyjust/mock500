<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_190"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/qb_px_20"
    android:layout_marginLeft="@dimen/qb_px_32"
    android:layout_marginRight="@dimen/qb_px_32"
    android:layout_marginTop="@dimen/qb_px_20"
    app:cardCornerRadius="@dimen/qb_px_12"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:background="@color/base_F5F5F5"
            android:layout_width="@dimen/qb_px_152"
            android:layout_height="match_parent"
            android:padding="@dimen/qb_px_20">
            <ImageView
                android:id="@+id/iv_red_packet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/red_packet"/>
            <TextView
                android:id="@+id/tv_much"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/useless_red_yellow_color"
                android:textSize="@dimen/qb_px_65"
                tools:text="3"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_red_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/qb_px_18"
                android:layout_marginTop="@dimen/qb_px_30"
                android:textColor="@color/useless_red_red_color"
                android:textSize="@dimen/qb_px_29"
                tools:text="狂欢住宿害怕你会包"/>
            <TextView
                android:id="@+id/tv_red_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_red_name"
                android:layout_alignBottom="@id/tv_red_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:textColor="@color/useless_red_red_color"
                android:textSize="@dimen/qb_px_29"
                tools:text="3彩币"/>
            <ImageView
                android:id="@+id/iv_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/red_sel"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_red_name"
                android:layout_below="@id/tv_red_name"
                android:layout_marginTop="@dimen/qb_px_22"
                android:textColor="#454545"
                android:textSize="@dimen/qb_px_21"
                tools:text="有效期至102--123"/>
            <TextView
                android:id="@+id/tv_use_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_deadline"
                android:layout_alignBottom="@id/tv_deadline"
                android:layout_alignEnd="@id/tv_red_num"
                android:textColor="#454545"
                android:textSize="@dimen/qb_px_21"
                tools:text="满30彩币可用"/>
            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/tv_deadline"
                android:layout_marginBottom="@dimen/qb_px_20"
                android:textColor="#454545"
                android:textSize="@dimen/qb_px_21"
                tools:text="仅限用来购买部分购彩方案，不可兑现"/>
            <ImageView
                android:id="@+id/iv_guo_qi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_use_condition"
                android:layout_alignEnd="@+id/tv_red_num"
                android:src="@mipmap/guo_qi"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
