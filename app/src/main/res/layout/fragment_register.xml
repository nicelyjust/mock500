<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray"
    tools:context=".login.fragment.ForgetFragment">

    <!--手机号-->
    <com.yunzhou.tdinformation.view.login.LoginItem
        android:id="@+id/li_input_phone_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_91"
        app:li_style="phone"/>
    <!--验证码-->
    <com.yunzhou.tdinformation.view.login.LoginItem
        android:id="@+id/li_input_auth_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_91"
        android:layout_below="@id/li_input_phone_register"
        app:li_style="auth"/>
    <!--登录密码-->
    <com.yunzhou.tdinformation.view.login.LoginItem
        android:id="@+id/li_input_password_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_91"
        android:layout_below="@id/li_input_auth_register"
        app:li_style="password"/>
    <!--确认密码-->
    <com.yunzhou.tdinformation.view.login.LoginItem
        android:id="@+id/li_input_password_confirm_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_91"
        android:layout_below="@id/li_input_password_register"
        app:li_style="password"/>
    <!--避免点击返回-->
    <TextView
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@id/li_input_password_confirm_register"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm_register"
        style="@style/confirm_btn_style"
        android:layout_below="@id/space"
        android:text="@string/app_confirm"/>

</RelativeLayout>