<?xml version="1.0" encoding="utf-8"?>
<com.yunzhou.tdinformation.view.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_4"
    app:oscAccordTo="0">

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dadada"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/qb_px_36"
        android:layout_height="@dimen/qb_px_36"
        android:layout_gravity="right|top"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/qb_px_4"
        android:paddingLeft="@dimen/qb_px_4"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_tweet_delete" />
</com.yunzhou.tdinformation.view.SquareLayout>