<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_comment_area"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/qb_px_15"
    android:background="@drawable/shape_gray_bg">
    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/qb_px_20"
        tools:text="183è¯„"/>
    <TextView
        android:hint="@string/post_something"
        android:id="@+id/tv_comment_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/qb_px_32"
        android:layout_marginStart="@dimen/qb_px_20"
        android:layout_toStartOf="@id/tv_comment_count"
        android:drawablePadding="@dimen/qb_px_21"
        android:drawableStart="@mipmap/comment"
        android:textColor="@color/colorText9"
        android:textSize="@dimen/qb_px_24"/>
</RelativeLayout>