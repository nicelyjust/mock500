<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/qb_px_152"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_spec_head"
        android:layout_width="@dimen/qb_px_96"
        android:layout_height="@dimen/qb_px_96"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/tv_information_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:layout_marginStart="@dimen/qb_px_12"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:singleLine="true"
        android:text="耽误飞扬"
        android:textColor="@color/colorText3"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_win_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:layout_marginStart="@dimen/qb_px_12"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:singleLine="true"
        android:text="3天胜率10"
        android:textColor="@color/colorText9"
        android:textSize="@dimen/qb_px_20"/>
</LinearLayout>
