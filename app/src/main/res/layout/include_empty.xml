<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="@dimen/qb_px_170"
        android:layout_height="@dimen/qb_px_170"
        android:layout_gravity="center"
        android:contentDescription="@string/srl_content_empty"
        android:scaleType="centerInside"
        android:src="@mipmap/empty"/>
    <TextView
        android:layout_marginTop="@dimen/qb_px_20"
        android:id="@+id/tv_empty_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/page_empty"
        android:textColor="@color/colorText6"
        android:textSize="@dimen/qb_px_32"/>
</LinearLayout>